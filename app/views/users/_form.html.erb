
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>

      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-white rounded", local: true) do | f | %>
      <div class= "form-group row mt-4">
        <%= f.label :username, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.text_field :username, class: "form-control", placeholder: "Enter your username" %>
        </div>
      </div>
      <div class= "form-group row mt-4">
        <%= f.label :email, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
        </div>
      </div>
      <div class= "form-group row mt-4">
        <%= f.label :password, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
        </div>
      </div>



        <div class= "form-group row justify-content-md-center">
          <%= f.submit(@user.new_record? ? "Sign Up" :"Update", class: "col-2 btn btn-success") %>
        </div>
        <div class="card-footer text-muted">
          <a href=<%= articles_path() %> class="btn btn-secondary"> Return</a>
        </div>

      <% end %>
    </div>
  </div>
</div>

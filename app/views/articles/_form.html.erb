
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @article %>

      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-white rounded", local: true) do | f | %>
        <div class= "form-group row mt-4">
          <%= f.label :title, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control", placeholder: "Title of Article" %>
          </div>
        </div>

        <div class= "form-group row">
          <%= f.label :description, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_area :description, rows: "10", class: "form-control", placeholder: "Description of Article" %>
          </div>
        </div>

        <div class= "form-group row justify-content-md-center">
          <%= f.submit class: "col-2 btn btn-success" %>
        </div>
        <div class="card-footer text-muted">
          <a href=<%= articles_path() %> class="btn btn-secondary"> Return</a>
        </div>

      <% end %>
    </div>
  </div>
</div>
